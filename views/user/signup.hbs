{{!-- Sign Up --}}
<section class="pt-5">
    <div class="block mt-5 p-5">
        <div class="image d-none d-lg-block">
            <img src="../images/signin.jpg" style="width:30rem;height:30rem;">
        </div>
        <div class="wrapper">
             {{#if err}}
            <div class="alert alert-danger" role="alert">
                User assosciated witn this email already exist
            </div>
            {{else if error}}
            <div class="alert alert-danger" role="alert">
                User associated with this contact number already exist
            </div>
            {{/if}}
            <form id="form" action="/signup" method="post">
                <div class="title pt-5">
                    Meral Welcomes You
                </div>
                <div class="input-field">
                    <label for="firstname">First Name</label>
                    <input type="text" class="input" name="firstname" id="firstname">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <label for="lastname">Last Name</label>
                    <input type="text" class="input" name="lastname" id="lastname">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <label for="email">Email</label>
                    <input type="text" class="input" name="email" id="email">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <label for="contact">Contact Number</label>
                    <input type="text" class="input" name="contact" id="contact">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <label for="password">Password</label>
                    <input type="password" class="input" name="password" id="password">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <label for="password2">Confirm Password</label>
                    <input type="password" class="input" name="password2" id="password2">
                    <div class="error"></div>
                </div>
                <div class="input-field">
                    <button type="submit" class="btn">Create Account</button>
                </div>
            </form>
            <div class="extra" style="text-align:center">
                Already have an acoount? <a href="/login">Log In</a>
            </div>
        </div>
    </div>
</section>