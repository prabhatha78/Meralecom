<script>
    $(".button").click(function () {
        if ($(this).hasClass("deactivate")) {
            $(this).removeClass("deactivate")
        }
        if ($(this).hasClass("active")) {
            $(this).addClass("deactivate")
        }
        $(this).toggleClass("animate");
        $(this).toggleClass("active");
        $(this).toggleClass("inactive");
    });
</script>